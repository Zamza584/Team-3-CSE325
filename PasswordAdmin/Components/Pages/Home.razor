@page "/"
@inject UserService userService
@using PasswordAdmin.Models


<PageTitle>Home</PageTitle>

<!-- ================= HERO SECTION ================= -->
<div class="hero-container">
    <div class="hero-content">

        <!-- LEFT SIDE -->
        <div class="hero-text">
            <h1>
                Manage Your Passwords<br />
                Safely and Efficiently
            </h1>
            <p>
                Securely store and manage all your passwords in one place.
                Access your credentials anytime, from any device.
            </p>

            <div class="hero-buttons">
                <a href="/register" class="btn-primary">Get Started</a>
                <a href="/login" class="btn-outline">View More</a>
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="hero-image">
            <img src="lib/images/computer-pass.jpg" width="300" height="200" alt="Hero Image" />
        </div>

    </div>
</div>


<div class="container">

    <h2 class="section-title">What You Will Learn</h2>

    <div class="learn-grid">

        <div class="learn-card">
            <div class="icon-box">🔐</div>
            <h5>Secure Password Storage</h5>
            <p>
                Learn how to store and manage your passwords safely in one place.
            </p>
        </div>

        <div class="learn-card">
            <div class="icon-box">📱</div>
            <h5>Access Anywhere</h5>
            <p>
                Understand how to access your credentials securely, anytime, from any device.
            </p>
        </div>

        <div class="learn-card">
            <div class="icon-box">⚡</div>
            <h5>Quick Management</h5>
            <p>
                Master efficient password management to save time and stay organized.
            </p>
        </div>

    </div>
</div>

@code {
    // testing code: delete this later if you want. This is used to grab users and display them on this page
    public List<User> users = new();

    protected override async Task OnInitializedAsync() // used ai for this line
    {
        users = await userService.GetUsersInformation();

    }
}